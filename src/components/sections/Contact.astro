---

<section id="contact" class="contact">
  <div class="container">
    <h2 class="section-title">
      <GlowText as="span" color="cyan">Get in Touch</GlowText>
    </h2>

    <div class="contact__content">
      <p class="contact__intro">
        I'm always interested in hearing about new projects, opportunities,
        or just connecting with fellow engineers and researchers.
      </p>

      <div class="contact__email">
        <a href="mailto:meeladd7@gmail.com" class="contact__email-link">
          meeladd7@gmail.com
        </a>
      </div>

      <div class="contact__social">
        {socialLinks.map(link => (
          <a
            href={link.url}
            target="_blank"
            rel="noopener noreferrer"
            class="contact__social-link"
            aria-label={link.name}
          >
            <Fragment set:html={link.icon} />
            <span class="contact__social-name">{link.name}</span>
          </a>
        ))}
      </div>

      <div class="contact__cta">
        <Button href="mailto:meeladd7@gmail.com" variant="primary">
          Say Hello
        </Button>
      </div>
    </div>
  </div>

  <footer class="footer">
    <p>
      Designed & Built by <strong>Meelad Dashti</strong>
    </p>
    <p class="footer__tech">
      Built with Astro, TypeScript & Canvas API
    </p>
  </footer>
</section>

<style>
  .contact {
    padding: var(--section-padding) 0;
    padding-bottom: 2rem;
    background: var(--bg-primary);
    position: relative;
  }

  .section-title {
    text-align: center;
    margin-bottom: 2rem;
  }

  .contact__content {
    max-width: 600px;
    margin: 0 auto;
    text-align: center;
  }

  .contact__intro {
    font-size: 1.125rem;
    color: var(--text-secondary);
    margin-bottom: 2rem;
  }

  .contact__email {
    margin-bottom: 2rem;
  }

  .contact__email-link {
    font-family: var(--font-mono);
    font-size: 1.5rem;
    color: var(--neon-cyan);
    text-decoration: none;
    transition: all var(--transition-normal);
  }

  .contact__email-link:hover {
    text-shadow: var(--glow-cyan);
  }

  .contact__social {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .contact__social-link {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-muted);
    transition: all var(--transition-normal);
    padding: 1rem;
    border-radius: var(--radius-md);
  }

  .contact__social-link:hover {
    color: var(--neon-cyan);
    background: rgba(0, 255, 255, 0.1);
    transform: translateY(-4px);
  }

  .contact__social-name {
    font-size: 0.75rem;
    font-family: var(--font-mono);
  }

  .contact__cta {
    margin-top: 2rem;
  }

  .footer {
    text-align: center;
    padding-top: 4rem;
    color: var(--text-muted);
    font-size: 0.875rem;
  }

  .footer strong {
    color: var(--text-secondary);
  }

  .footer__tech {
    margin-top: 0.5rem;
    font-family: var(--font-mono);
    font-size: 0.75rem;
  }

  @media (max-width: 768px) {
    .contact__email-link {
      font-size: 1.125rem;
    }

    .contact__social {
      flex-wrap: wrap;
    }
  }
</style>
