---
interface Props {
  href?: string;
  variant?: 'primary' | 'outline' | 'ghost';
  size?: 'sm' | 'md' | 'lg';
  class?: string;
  external?: boolean;
}

const {
  href,
  variant = 'primary',
  size = 'md',
  class: className = '',
  external = false,
} = Astro.props;

const Tag = href ? 'a' : 'button';
const externalProps = external ? { target: '_blank', rel: 'noopener noreferrer' } : {};
---

<Tag
  href={href}
  class:list={['btn', `btn--${variant}`, `btn--${size}`, className]}
  {...externalProps}
>
  <slot />
</Tag>

<style>
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    font-family: var(--font-mono);
    font-weight: 500;
    text-decoration: none;
    border: none;
    border-radius: var(--radius-sm);
    cursor: pointer;
    transition: all var(--transition-normal);
    white-space: nowrap;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    position: relative;
    overflow: hidden;
  }

  /* Cyber corner accents */
  .btn::before,
  .btn::after {
    content: '';
    position: absolute;
    width: 8px;
    height: 8px;
    border: 2px solid currentColor;
    opacity: 0.5;
    transition: opacity var(--transition-fast);
  }

  .btn::before {
    top: 2px;
    left: 2px;
    border-right: none;
    border-bottom: none;
  }

  .btn::after {
    bottom: 2px;
    right: 2px;
    border-left: none;
    border-top: none;
  }

  .btn:hover::before,
  .btn:hover::after {
    opacity: 1;
  }

  /* Sizes */
  .btn--sm {
    padding: 0.5rem 1rem;
    font-size: 0.75rem;
  }

  .btn--md {
    padding: 0.75rem 1.5rem;
    font-size: 0.875rem;
  }

  .btn--lg {
    padding: 1rem 2rem;
    font-size: 1rem;
  }

  /* Variants */
  .btn--primary {
    background: var(--neon-green);
    color: var(--bg-primary);
    box-shadow: 0 0 20px rgba(57, 255, 20, 0.5), 0 0 40px rgba(57, 255, 20, 0.3);
  }

  .btn--primary:hover {
    transform: translateY(-2px);
    box-shadow:
      0 0 30px rgba(57, 255, 20, 0.8),
      0 0 60px rgba(57, 255, 20, 0.4),
      inset 0 0 20px rgba(255, 255, 255, 0.2);
  }

  .btn--primary::before,
  .btn--primary::after {
    border-color: var(--bg-primary);
  }

  .btn--outline {
    background: transparent;
    color: var(--neon-green);
    border: 1px solid var(--neon-green);
    box-shadow: inset 0 0 20px rgba(57, 255, 20, 0.1), 0 0 15px rgba(57, 255, 20, 0.2);
  }

  .btn--outline:hover {
    background: rgba(57, 255, 20, 0.1);
    box-shadow:
      0 0 30px rgba(57, 255, 20, 0.4),
      inset 0 0 20px rgba(57, 255, 20, 0.2);
    transform: translateY(-2px);
  }

  .btn--ghost {
    background: transparent;
    color: var(--text-secondary);
  }

  .btn--ghost:hover {
    color: var(--neon-pink);
    background: rgba(255, 0, 255, 0.1);
    text-shadow: var(--glow-pink);
  }

  .btn--ghost::before,
  .btn--ghost::after {
    display: none;
  }
</style>
