---
// Theme Toggle Component
---

<button class="theme-toggle" id="theme-toggle" aria-label="Toggle theme">
  <span class="theme-toggle__icon theme-toggle__icon--dark">
    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/>
    </svg>
  </span>
  <span class="theme-toggle__icon theme-toggle__icon--light">
    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <circle cx="12" cy="12" r="5"/>
      <line x1="12" y1="1" x2="12" y2="3"/>
      <line x1="12" y1="21" x2="12" y2="23"/>
      <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/>
      <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/>
      <line x1="1" y1="12" x2="3" y2="12"/>
      <line x1="21" y1="12" x2="23" y2="12"/>
      <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/>
      <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/>
    </svg>
  </span>
  <span class="theme-toggle__text">
    <span class="theme-toggle__text--dark">DARK</span>
    <span class="theme-toggle__text--light">LIGHT</span>
  </span>
</button>

<script>
  const toggle = document.getElementById('theme-toggle');
  const html = document.documentElement;

  // Check for saved theme preference or default to dark
  const savedTheme = localStorage.getItem('theme') || 'dark';
  html.setAttribute('data-theme', savedTheme);

  toggle?.addEventListener('click', () => {
    const currentTheme = html.getAttribute('data-theme');
    const newTheme = currentTheme === 'dark' ? 'light' : 'dark';

    html.setAttribute('data-theme', newTheme);
    localStorage.setItem('theme', newTheme);
  });
</script>

<style>
  .theme-toggle {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: transparent;
    border: 1px solid var(--neon-green);
    border-radius: var(--radius-sm);
    color: var(--neon-green);
    font-family: var(--font-mono);
    font-size: 0.75rem;
    cursor: pointer;
    transition: all var(--transition-fast);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .theme-toggle:hover {
    background: rgba(57, 255, 20, 0.1);
    box-shadow: var(--glow-subtle);
  }

  .theme-toggle__icon {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* Dark theme - show moon, hide sun */
  [data-theme="dark"] .theme-toggle__icon--light,
  [data-theme="dark"] .theme-toggle__text--light {
    display: none;
  }

  /* Light theme - show sun, hide moon */
  [data-theme="light"] .theme-toggle__icon--dark,
  [data-theme="light"] .theme-toggle__text--dark {
    display: none;
  }

  [data-theme="light"] .theme-toggle {
    border-color: var(--neon-green);
    color: var(--neon-green);
  }

  [data-theme="light"] .theme-toggle:hover {
    background: rgba(5, 150, 105, 0.1);
  }
</style>
